generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  username    String        @unique
  password    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  DailyTarget DailyTarget[]
  menu        Menu[]
}

model Menu {
  id        Int      @id @default(autoincrement())
  jenisMenu String
  userId    Int
  hari      DateTime
  foods     Food[]
  user      User     @relation(fields: [userId], references: [id])
}

model Food {
  id          Int    @id @default(autoincrement())
  foodId      Int
  kalori      Int
  menuId      Int
  takaran     Int
  namaMakanan String
  takaranAwal String
  menu        Menu   @relation(fields: [menuId], references: [id])
}

model DailyTarget {
  id     Int      @id @default(autoincrement())
  target Int
  userId Int
  date   DateTime
  user   User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}
